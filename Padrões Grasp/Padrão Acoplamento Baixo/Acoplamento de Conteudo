/// um modulo utiliza aspectos de implementacao de outro fere diretrizes de programaçao
/// Modulo cliente acessa diretamente o atributo mes de uma instancia de data
/// data esta exposta e é diretamente utilizada pelos demais modulos


public class Data{
    public int dia;
    public int mes;
    public int ano;

    public int getDiaSemana(){
        //implementação que retorna o dia da semana correspondente a data
    }
    public adicionaDias(int dias){
        //implementação do codigo que adiciona x dias a data
    }
}

public class ModuloCliente{
    public void metodo(Data data){
        if (data.mes == 8) {
            System.out.println('mes de agosto')
        }
    }
}

//caso mudassemos o tipo de dado da classe data de int para str, ocorreria um erro na classe ModuloCliente
// em outras classes que implementassem o mesmo metodo de construção 